			<frame y="0" texture="/ui/frames/rounded_bg_white.tga" borderthickness="12" style="lobby_window_bg"/>
			<frame y="0" texture="/ui/frames/roundframe.tga" color="#5E2D1F" borderthickness="12"/>
		
